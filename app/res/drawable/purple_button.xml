<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="@color/soft_purple" />
      <stroke
          android:width="1dp"
          android:color="@color/soft_purple" />
      <corners
          android:radius="1dp" />
      <padding
          />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="@color/soft_purple"
          android:endColor="@color/soft_purple"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="@color/soft_purple" />
      <corners
          android:radius="1dp" />
      <padding
          android:left="5dp"
          android:top="5dp"
          android:right="5dp"
          android:bottom="5dp" />
    </shape>
  </item>
</selector>